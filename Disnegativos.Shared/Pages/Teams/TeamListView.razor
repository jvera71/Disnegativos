@using Disnegativos.Shared.DTOs
@using Disnegativos.Shared.Resources
@inject IStringLocalizer<SharedResources> L

<RadzenStack Orientation="Orientation.Vertical" Gap="1rem">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
        <RadzenText TextStyle="TextStyle.H5" class="rz-m-0">@L["Teams"]</RadzenText>
        <RadzenButton Icon="add" Text="@L["AddTeam"]" Click="@OnAdd" ButtonStyle="ButtonStyle.Primary" />
    </RadzenStack>

    <RadzenDataGrid Data="@Data" TItem="TeamDto" AllowFiltering="true" AllowSorting="true" AllowPaging="true" PageSize="10" 
                    IsLoading="@IsLoading" EmptyText="@L["NoDataFound"]">
        <Columns>
            <RadzenDataGridColumn TItem="TeamDto" Property="Name" Title="@L["Name"]" />
            <RadzenDataGridColumn TItem="TeamDto" Property="Alias" Title="@L["Alias"]" />
            <RadzenDataGridColumn TItem="TeamDto" Property="DisciplineName" Title="@L["Discipline"]" />
            <RadzenDataGridColumn TItem="TeamDto" Property="CategoryName" Title="@L["Category"]" />
            <RadzenDataGridColumn TItem="TeamDto" Property="IsActive" Title="@L["Active"]" Width="80px" TextAlign="TextAlign.Center">
                <Template Context="team">
                    <RadzenIcon Icon="@(team.IsActive ? "check_circle" : "cancel")" 
                                IconColor="@(team.IsActive ? "var(--rz-success)" : "var(--rz-danger)")" />
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="TeamDto" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="100px">
                <Template Context="team">
                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Click="@(() => OnEdit.InvokeAsync(team.Id))" />
                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Small" class="rz-ml-2" 
                                  Click="@(() => OnDelete.InvokeAsync(team.Id))" />
                </Template>
            </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
</RadzenStack>

@code {
    [Parameter] public List<TeamDto> Data { get; set; } = [];
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public EventCallback OnAdd { get; set; }
    [Parameter] public EventCallback<Guid> OnEdit { get; set; }
    [Parameter] public EventCallback<Guid> OnDelete { get; set; }
}
